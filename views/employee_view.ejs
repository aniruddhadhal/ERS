<%# # eployee view its like shows information of employee and list of feedbacks which need to be submitted %>

    <main>

        <div class="border-rounded">

            <div id="warning-by-server"></div>

            <% if (locals.user) { %>

                <%# user information %>

                    <div id="user-info" class="p-3 border" style="width: 30rem; margin: auto; text-align: center;">


                        <div id="user-name" style="text-transform: capitalize; font-weight: bold;">name:
                            <%= user.name %>
                        </div>
                        <div id="user-email" style="text-transform: capitalize; font-weight: bold;">email
                            <%= user.email %>
                        </div>
                        <div id="user-type" style="text-transform: capitalize; font-weight: bold;">type:
                            <%= user.type %>
                        </div>
                        <div id="company-name" style="text-transform: capitalize; font-weight: bold;"> company:
                            <%= user.company.name %>
                        </div>
                        <% if (user.type == 'admin') { %>
                            <div id="user-admin-ran" style="text-transform: capitalize; font-weight: bold;">AdminRank:
                                <%= user.adminRank %>
                            </div>
                            <% } %>
                                <div id="user-ranking" style="text-transform: capitalize; font-weight: bold;"> ranking:
                                    <%= user.rating %> (
                                        <%= user.feedbackRecieved.length %>) </div>


                    </div>

                    <%# all pending feedbacks forms %>

                        <div id="pending-feedback" class="container" style="width: 50rem; margin: auto; font-size: 15px;">
                            <h3 style="font-size: 20px; margin-top: 2px;">Pending Feedbacks</h3>
                            <div>
                                <% for( let index = 0; index < user.feedbackPending.length; index++ ) { %>
                                    <div class="mt-3">
                                        <form class="feedback-form">
                                            <div class="form-group">
                                                <label for="feedback">Feedback for <%= user.feedbackPending[index].name %>:</label>
                                                <textarea class="form-control" name="log" required></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label for="rating">Rating:</label>
                                                <select class="form-control" name="rating" required>
                                    <option value="1">1 star</option>
                                    <option value="2">2 stars</option>
                                    <option value="3">3 stars</option>
                                    <option value="4">4 stars</option>
                                    <option value="5">5 stars</option>
                                  </select>
                                            </div>
                                            <input type="hidden" name="recieverId" value="<%= user.feedbackPending[index]._id %>" required>
                                            <button type="submit" class="btn btn-success mt-2">Submit</button>
                                        </form>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                        <script src="/js/employee_view.js"></script>
                        <% } %>

        </div>

    </main>